@page
@model eCO2Tracker.Pages.Test.AddModel
@{
	ViewData["Title"] = "Add Lifestyle";
}
<h1 class="display-4">@ViewData["Title"]</h1>
<form class="mt-3" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="col-md-8">
		<div class="row mb-3">
			<label class="col-sm-2 col-form-label" asp-for="question.QuestionTitle"></label>
			<div class="col-sm-10">
				<input class="form-control" asp-for="question.QuestionTitle" />
				<span asp-validation-for="question.QuestionTitle" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-2 col-form-label" asp-for="question.QuestionType"></label>
			<div class="col-sm-10">
				@Html.DropDownListFor(m => m.question.QuestionType, new SelectList(Enum.GetValues(typeof(Services.TestService.QuestionTypeList))), 
				"-- Select --", new {@class = "form-select"})
				<span asp-validation-for="question.QuestionType" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-2 col-form-label" asp-for="question.QuestionSection"></label>
			<div class="col-sm-10">
				@Html.DropDownListFor(m => m.question.QuestionSection, new SelectList(Enum.GetValues(typeof(Services.TestService.QuestionSectionList))),
				"-- Select --", new {@class = "form-select"})
				<span asp-validation-for="question.QuestionSection" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-2 col-form-label" asp-for="question.Recommendation"></label>
			<div class="col-sm-10">
				<input class="form-control" asp-for="question.Recommendation" />
				<span asp-validation-for="question.Recommendation" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<label class="col-sm-2 col-form-label" asp-for="question.QuestionStatus"></label>
			<div class="col-sm-10 d-flex align-items-center">
				<div class="form-check form-check-inline">
					@Html.CheckBoxFor(m => m.question.QuestionStatus, new {@class = "form-check-input"})
					<label class="form-check-label">Set status to online after submitting</label>
				</div>
			</div>
		</div>
	</div>

	<div>
		<input type="submit" value="Add" class="btn btn-primary" />
		<a class="btn btn-secondary ms-2" href="/Lifestyle">Cancel</a>
	</div>
</form>