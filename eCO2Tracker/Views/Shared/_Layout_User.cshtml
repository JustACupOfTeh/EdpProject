@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row bg-white pt-3 pb-3">
    <div class="col-3 border border-right border-left-0 border-bottom-0 border-top-0">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
            <div class="position-sticky">
                <div class="list-group list-group-flush mx-3 mt-4">
                    <a href="@Url.Action("Index","User", new { firstName = ViewBag.FirstName, lastName = ViewBag.LastName, id = ViewBag.Id })" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>User Dashboard</span>
                    </a>
                    <a href="@Url.Action("ShowReferralCode","User", new{ id = @ViewBag.Id })" class="list-group-item list-group-item-action py-2 ripple">
                        <i class="fas fa-share-nodes fa-fw me-3">
                            </i><span>Referral Code
                       </span>
                    </a>
                 
                </div>
            </div>
        </nav>
        <!-- Sidebar -->
    </div>
    <div class="col-9 ">
        @RenderBody()
    </div>
</div>




<!--Main layout-->
<main style="margin-top: 58px;">
    <div class="container pt-4"></div>
</main>
<!--Main layout-->